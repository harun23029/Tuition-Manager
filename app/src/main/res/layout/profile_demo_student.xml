<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/profile_page_student"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ddedea"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/picture_profile_student"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/harun"/>

                <TextView
                    android:id="@+id/name_profile_student"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamin Hossain"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/school_profile_student"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dhaka College"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/class_profile_student"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Class 12"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/section_profile_student"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Science"
                    android:textSize="15dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/gender_profile_student"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="15dp"
                    android:layout_margin="10dp"
                    android:drawableLeft="@drawable/ic_supervisor_account_black_24dp"/>
                <TextView
                    android:id="@+id/address_profile_student"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="441/1F west Sewrapara Mirpur,Dhaka."
                    android:textSize="15dp"
                    android:layout_margin="10dp"
                    android:drawableLeft="@drawable/ic_place_black_24dp"/>
                <TextView
                    android:id="@+id/phone_profile_student"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="01871445680"
                    android:textSize="15dp"
                    android:layout_margin="10dp"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>